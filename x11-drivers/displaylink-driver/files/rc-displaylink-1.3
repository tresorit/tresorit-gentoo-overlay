depend() {
	after xdm
}

start() {
	modprobe -q evdi
	start-stop-daemon --start --background --chdir /opt/displaylink --make-pidfile --pidfile /run/displaylink.pid --exec /opt/displaylink/DisplayLinkManager
	eend $?
}

stop() {
	start-stop-daemon --stop --pidfile /run/displaylink.pid
	eend $?
}
